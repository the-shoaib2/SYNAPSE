# Development Dockerfile for Synapse
FROM node:20-alpine

# Install npm (already included with Node.js)
# No need to install npm globally

# Install system dependencies for native modules
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    git \
    bash

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json ./
COPY core/package.json ./core/
COPY extensions/vscode/package.json ./extensions/vscode/
# IntelliJ extension removed
COPY ui/package.json ./ui/
COPY docs/package.json ./docs/
COPY packages/*/package.json ./packages/
COPY binary/package.json ./binary/
COPY scripts/package.json ./scripts/

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose ports for development servers
EXPOSE 3000 3001 3002

# Start development
CMD ["npm", "run", "dev"]
