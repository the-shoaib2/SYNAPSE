{
  "name": "synapse",
  "workspaces": [
    "core",
    "extensions/*",
    "ui",
    "docs",
    "packages/*",
    "binary",
    "scripts"
  ],
  "scripts": {
    "dev": "npm run --parallel dev:ui dev:core dev:vscode dev:docs",
    "dev:ui": "cd ui && npm run dev",
    "dev:core": "cd core && npm run dev",
    "dev:vscode": "cd extensions/vscode && npm run esbuild-watch",
    "dev:docs": "cd docs && npm run start",
    "build": "npm run --recursive build",
    "build:ui": "cd ui && npm run build",
    "build:core": "cd core && npm run build",
    "build:vscode": "cd extensions/vscode && npm run esbuild",
    "build:docs": "cd docs && npm run build",
    "test": "npm run --recursive test",
    "lint": "npm run --recursive lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore --ignore-path .prettierignore",
    "clean": "npm run --recursive clean",
    "tsc:watch": "npm run --parallel tsc:watch:ui tsc:watch:vscode tsc:watch:core tsc:watch:binary",
    "tsc:watch:ui": "cd ui && npm run tsc:watch",
    "tsc:watch:vscode": "cd extensions/vscode && npm run tsc-watch",
    "tsc:watch:core": "cd core && npm run tsc:watch",
    "tsc:watch:binary": "cd binary && npm run tsc:watch",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up --build",
    "docker:build": "docker build -t synapse -f docker/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 -p 3002:3002 synapse"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^7.8.0",
    "concurrently": "^9.1.2",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@huggingface/jinja": "^0.5.1",
    "@lancedb/vectordb-darwin-arm64": "^0.21.2"
  }
}
